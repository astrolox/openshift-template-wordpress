{
    "metadata": {
        "name": "wordpress-4-wip",
        "annotations": {
            "description": "WordPress blogging tool and a content management system (CMS)"
        }
    },
    "apiVersion": "v1",
    "parameters": [
        {
            "displayName": "Linux user ID number",
            "name": "UID",
            "description": "The linux user ID number which everything must run under",
            "value": ""
        },
        {
            "displayName": "Test URL hostname",
            "name": "TEST_URL_HOSTNAME",
            "description": "The exposed hostname that routes to the new WordPress blog",
            "value": ""
        },
        {
            "displayName": "Database admin URL hostname",
            "name": "DATABASE_ADMIN_URL_HOSTNAME",
            "description": "The exposed hostname that routes to the admin interface for the database",
            "value": ""
        },
        {
            "displayName": "Database password",
            "name": "DEFAULT_DATABASE_PASSWORD",
            "description": "Password for the WordPress database user",
            "from": "[a-zA-Z0-9]{24}",
            "required": true,
            "generate": "expression"
        },
        {
            "displayName": "Database administrator password",
            "name": "DATABASE_ADMIN_PASSWORD",
            "description": "Password for the database admin user which you can use to administer the database",
            "from": "[a-zA-Z0-9]{16}",
            "required": true,
            "generate": "expression"
        },
        {
            "displayName": "Application service name",
            "name": "APP_SERVICE_NAME",
            "description": "Application service name",
            "from": "php[0-9]{3}",
            "required": true,
            "generate": "expression"
        },
        {
            "displayName": "Database service name",
            "name": "DATABASE_SERVICE_NAME",
            "description": "Database service name",
            "from": "mariadb[0-9]{3}",
            "required": true,
            "generate": "expression"
        },
        {
            "displayName": "Database admin service name",
            "name": "DATABASE_ADMIN_SERVICE_NAME",
            "description": "Database admin service name",
            "from": "dbadmin[0-9]{3}",
            "required": true,
            "generate": "expression"
        }
    ],
    "kind": "Template",
    "labels": {
        "test": "test101"
    },
    "objects": [
        {
            "metadata": {
                "name": "${APP_SERVICE_NAME}",
                "labels": {
                    "readonly": "true",
                    "endpoint": "internal",
                    "service": "php"
                },
                "annotations": {
                    "description": "Internal Endpoint for the WordPress PHP Web Scripting"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${APP_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "name": "web",
                        "port": 80,
                        "targetPort": 80
                    }
                ]
            },
            "kind": "Service"
        },
        {
            "metadata": {
                "name": "${APP_SERVICE_NAME}",
                "labels": {
                    "readonly": "true",
                    "endpoint": "public",
                    "service": "php"
                },
                "annotations": {
                    "description": "Public HTTP Endpoint for the WordPress PHP Web Scripting"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "to": {
                    "name": "${APP_SERVICE_NAME}",
                    "kind": "Service"
                },
                "host": "${TEST_URL_HOSTNAME}"
            },
            "kind": "Route"
        },
        {
            "metadata": {
                "name": "${APP_SERVICE_NAME}",
                "labels": {
                    "service": "php"
                },
                "annotations": {
                    "description": "Definition for deploying the WordPres PHP Web Scripting application pod"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${APP_SERVICE_NAME}"
                },
                "replicas": 1,
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "name": "${APP_SERVICE_NAME}",
                        "labels": {
                            "name": "${APP_SERVICE_NAME}",
                            "service": "php"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_SERVICE_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 80
                                    }
                                ],
                                "image": "wordpress:latest",
                                "volumeMounts": [
                                    {
                                        "name": "wordpress-data",
                                        "mountPath": "/var/www/html"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "WORDPRESS_DB_HOST",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "WORDPRESS_DB_USER",
                                        "value": "wordpress"
                                    },
                                    {
                                        "name": "WORDPRESS_DB_PASSWORD",
                                        "value": "${DEFAULT_DATABASE_PASSWORD}"
                                    },
                                    {
                                        "name": "WORDPRESS_DB_NAME",
                                        "value": "wordpress"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "wordpress-data",
                                "emptyDir": {
                                    "medium": ""
                                }
                            }
                        ]
                    }
                }
            },
            "kind": "DeploymentConfig"
        },
        {
            "metadata": {
                "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                "labels": {
                    "internal": "true",
                    "readonly": "true",
                    "endpoint": "internal",
                    "service": "mariadb",
                    "pod": "dbadmin"
                },
                "annotations": {
                    "description": "Internal Endpoint for the Database Administration Web UI"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "name": "web",
                        "port": 80,
                        "targetPort": 80
                    }
                ]
            },
            "kind": "Service"
        },
        {
            "metadata": {
                "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                "labels": {
                    "internal": "true",
                    "readonly": "true",
                    "endpoint": "internal",
                    "service": "mariadb",
                    "pod": "dbadmin"
                },
                "annotations": {
                    "description": "Public HTTP Endpoint for the Database Administration Web UI"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "to": {
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                    "kind": "Service"
                },
                "host": "${DATABASE_ADMIN_URL_HOSTNAME}"
            },
            "kind": "Route"
        },
        {
            "metadata": {
                "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                "labels": {
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Definition for deploying the Database Administration Web UI application pod"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                },
                "replicas": 1,
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                        "labels": {
                            "part": "dbadmin",
                            "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                            "tree": "3"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${DATABASE_ADMIN_SERVICE_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 80
                                    }
                                ],
                                "image": "astrolox/wip-phpmyadmin:latest",
                                "env": [
                                    {
                                        "name": "PMA_HOST",
                                        "value": "${DATABASE_SERVICE_NAME}"
                                    },
                                    {
                                        "name": "PMA_PORT",
                                        "value": "3306"
                                    }
                                ]
                            }
                        ]
                    }
                }
            },
            "kind": "DeploymentConfig"
        },
        {
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}",
                "labels": {
                    "readonly": "true",
                    "endpoint": "internal",
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Internal Endpoint for the Database"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "name": "${DATABASE_SERVICE_NAME}",
                        "port": 3306,
                        "targetPort": 3306
                    }
                ]
            },
            "kind": "Service"
        },
        {
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}",
                "labels": {
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Definition for deploying the Database"
                }
            },
            "apiVersion": "v1",
            "spec": {
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "replicas": 1,
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "name": "${DATABASE_SERVICE_NAME}",
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}",
                            "service": "mariadb"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${DATABASE_SERVICE_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "image": "mariadb:latest",
                                "volumeMounts": [
                                    {
                                        "name": "${DATABASE_SERVICE_NAME}-data",
                                        "mountPath": "/var/lib/mysql/data"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "MYSQL_USER",
                                        "value": "wordpress"
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "value": "${DEFAULT_DATABASE_PASSWORD}"
                                    },
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "wordpress"
                                    },
                                    {
                                        "name": "MYSQL_ROOT_PASSWORD",
                                        "value": "${DATABASE_ADMIN_PASSWORD}"
                                    },
                                    {
                                        "name": "DATABASE_ADMIN_PASSWORD",
                                        "value": "${DATABASE_ADMIN_PASSWORD}"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "${DATABASE_SERVICE_NAME}-data",
                                "emptyDir": {
                                    "medium": ""
                                }
                            }
                        ]
                    }
                }
            },
            "kind": "DeploymentConfig"
        }
    ]
}