{
    "metadata": {
        "annotations": {
            "description": "WordPress blogging tool and a content management system (CMS)"
        },
        "name": "wordpress-4-wip"
    },
    "kind": "Template",
    "parameters": [
        {
            "displayName": "Linux user ID number",
            "value": "",
            "description": "The linux user ID number which everything must run under",
            "name": "UID"
        },
        {
            "displayName": "Test URL hostname",
            "value": "",
            "description": "The exposed hostname that routes to the new WordPress blog",
            "name": "TEST_URL_HOSTNAME"
        },
        {
            "displayName": "Database admin URL hostname",
            "value": "",
            "description": "The exposed hostname that routes to the admin interface for the database",
            "name": "DATABASE_ADMIN_URL_HOSTNAME"
        },
        {
            "displayName": "Database password",
            "generate": "expression",
            "description": "Password for the WordPress database user",
            "required": true,
            "from": "[a-zA-Z0-9]{24}",
            "name": "DEFAULT_DATABASE_PASSWORD"
        },
        {
            "displayName": "Database administrator password",
            "generate": "expression",
            "description": "Password for the database admin user which you can use to administer the database",
            "required": true,
            "from": "[a-zA-Z0-9]{16}",
            "name": "DATABASE_ADMIN_PASSWORD"
        },
        {
            "displayName": "Application service name",
            "generate": "expression",
            "description": "Application service name",
            "required": true,
            "from": "php[0-9]{3}",
            "name": "APP_SERVICE_NAME"
        },
        {
            "displayName": "Database service name",
            "generate": "expression",
            "description": "Database service name",
            "required": true,
            "from": "mariadb[0-9]{3}",
            "name": "DATABASE_SERVICE_NAME"
        },
        {
            "displayName": "Database admin service name",
            "generate": "expression",
            "description": "Database admin service name",
            "required": true,
            "from": "dbadmin[0-9]{3}",
            "name": "DATABASE_ADMIN_SERVICE_NAME"
        }
    ],
    "apiVersion": "v1",
    "labels": {
        "test": "test101"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "endpoint": "internal",
                    "readonly": "true",
                    "service": "php"
                },
                "annotations": {
                    "description": "Internal Endpoint for the WordPress PHP Web Scripting"
                },
                "name": "${APP_SERVICE_NAME}"
            },
            "kind": "Service",
            "spec": {
                "selector": {
                    "name": "${APP_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "targetPort": 80,
                        "port": 80,
                        "name": "web"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "endpoint": "public",
                    "readonly": "true",
                    "service": "php"
                },
                "annotations": {
                    "description": "Public HTTP Endpoint for the WordPress PHP Web Scripting"
                },
                "name": "${APP_SERVICE_NAME}"
            },
            "kind": "Route",
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${APP_SERVICE_NAME}"
                },
                "host": "${TEST_URL_HOSTNAME}"
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "service": "php"
                },
                "annotations": {
                    "description": "Definition for deploying the WordPres PHP Web Scripting application pod"
                },
                "name": "${APP_SERVICE_NAME}"
            },
            "kind": "DeploymentConfig",
            "spec": {
                "selector": {
                    "name": "${APP_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${APP_SERVICE_NAME}",
                            "service": "php"
                        },
                        "name": "${APP_SERVICE_NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "value": "${DATABASE_SERVICE_NAME}",
                                        "name": "WORDPRESS_DB_HOST"
                                    },
                                    {
                                        "value": "wordpress",
                                        "name": "WORDPRESS_DB_USER"
                                    },
                                    {
                                        "value": "${DEFAULT_DATABASE_PASSWORD}",
                                        "name": "WORDPRESS_DB_PASSWORD"
                                    },
                                    {
                                        "value": "wordpress",
                                        "name": "WORDPRESS_DB_NAME"
                                    }
                                ],
                                "ports": [
                                    {
                                        "containerPort": 80
                                    }
                                ],
                                "image": "wordpress",
                                "name": "${APP_SERVICE_NAME}",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/www/html",
                                        "name": "wordpress-data"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "emptyDir": {
                                    "medium": ""
                                },
                                "name": "wordpress-data"
                            }
                        ]
                    }
                },
                "replicas": 1,
                "strategy": {
                    "type": "Recreate"
                }
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "endpoint": "internal",
                    "pod": "dbadmin",
                    "internal": "true",
                    "readonly": "true",
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Internal Endpoint for the Database Administration Web UI"
                },
                "name": "${DATABASE_ADMIN_SERVICE_NAME}"
            },
            "kind": "Service",
            "spec": {
                "selector": {
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "targetPort": 80,
                        "port": 80,
                        "name": "web"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "endpoint": "internal",
                    "pod": "dbadmin",
                    "internal": "true",
                    "readonly": "true",
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Public HTTP Endpoint for the Database Administration Web UI"
                },
                "name": "${DATABASE_ADMIN_SERVICE_NAME}"
            },
            "kind": "Route",
            "spec": {
                "to": {
                    "kind": "Service",
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                },
                "host": "${DATABASE_ADMIN_URL_HOSTNAME}"
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Definition for deploying the Database Administration Web UI application pod"
                },
                "name": "${DATABASE_ADMIN_SERVICE_NAME}"
            },
            "kind": "DeploymentConfig",
            "spec": {
                "selector": {
                    "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "template": {
                    "metadata": {
                        "labels": {
                            "part": "dbadmin",
                            "tree": "3",
                            "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                        },
                        "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "value": "${DATABASE_SERVICE_NAME}",
                                        "name": "PMA_HOST"
                                    },
                                    {
                                        "value": "3306",
                                        "name": "PMA_PORT"
                                    }
                                ],
                                "ports": [
                                    {
                                        "containerPort": 80
                                    }
                                ],
                                "image": "astrolox/wip-phpmyadmin",
                                "name": "${DATABASE_ADMIN_SERVICE_NAME}"
                            }
                        ]
                    }
                },
                "replicas": 1,
                "strategy": {
                    "type": "Recreate"
                }
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "endpoint": "internal",
                    "readonly": "true",
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Internal Endpoint for the Database"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            },
            "kind": "Service",
            "spec": {
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "ports": [
                    {
                        "targetPort": 3306,
                        "port": 3306,
                        "name": "${DATABASE_SERVICE_NAME}"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "metadata": {
                "labels": {
                    "service": "mariadb"
                },
                "annotations": {
                    "description": "Definition for deploying the Database"
                },
                "name": "${DATABASE_SERVICE_NAME}"
            },
            "kind": "DeploymentConfig",
            "spec": {
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    }
                ],
                "template": {
                    "metadata": {
                        "labels": {
                            "name": "${DATABASE_SERVICE_NAME}",
                            "service": "mariadb"
                        },
                        "name": "${DATABASE_SERVICE_NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "value": "wordpress",
                                        "name": "MYSQL_USER"
                                    },
                                    {
                                        "value": "${DEFAULT_DATABASE_PASSWORD}",
                                        "name": "MYSQL_PASSWORD"
                                    },
                                    {
                                        "value": "wordpress",
                                        "name": "MYSQL_DATABASE"
                                    },
                                    {
                                        "value": "${DATABASE_ADMIN_PASSWORD}",
                                        "name": "MYSQL_ROOT_PASSWORD"
                                    },
                                    {
                                        "value": "${DATABASE_ADMIN_PASSWORD}",
                                        "name": "DATABASE_ADMIN_PASSWORD"
                                    }
                                ],
                                "ports": [
                                    {
                                        "containerPort": 3306
                                    }
                                ],
                                "image": "mariadb",
                                "name": "${DATABASE_SERVICE_NAME}",
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/mysql/data",
                                        "name": "${DATABASE_SERVICE_NAME}-data"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "emptyDir": {
                                    "medium": ""
                                },
                                "name": "${DATABASE_SERVICE_NAME}-data"
                            }
                        ]
                    }
                },
                "replicas": 1,
                "strategy": {
                    "type": "Recreate"
                }
            }
        }
    ]
}